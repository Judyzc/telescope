---
interface Props {
  title: string;
}
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/global.css">
  </head>
  <body>
    <nav class="nav">
      <div class="nav-container">
        <a href="/" class="nav-brand">Telescope</a>
        <div class="nav-links">
          <a href="/">Home</a>
          <a href="/upload">Upload</a>
        </div>
      </div>
    </nav>
    <main class="container">
      <slot />
    </main>
    <footer class="footer">
      <p>Telescope by Cloudflare</p>
    </footer>
  </body>
</html>
---